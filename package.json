{
  "name": "jest-expo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:integration": "jest __tests__/integration --coverage",
    "test:integration:watch": "jest __tests__/integration --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "android:prebuild": "npx expo prebuild --platform android",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:install": "adb install android/app/build/outputs/apk/debug/app-debug.apk",
    "android:run": "adb shell am start -n com.tausif1337.jestexpo/.MainActivity",
    "android:build-install": "npm run android:build && npm run android:install",
    "android:full": "npm run android:prebuild && npm run android:build && npm run android:install && npm run android:run",
    "e2e": "maestro test .maestro/",
    "e2e:record": "maestro record .maestro/"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  },
  "dependencies": {
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "expo": "~54.0.20",
    "expo-status-bar": "~3.0.8",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.13",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-test-renderer": "19.1.0"
  },
  "devDependencies": {
    "jest-circus": "^30.2.0"
  },
  "private": true
}
